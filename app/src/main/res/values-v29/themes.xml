<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HexMovie" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <!-- Set parent theme as app theme. -->
    <style name="DialogTheme" parent="Theme.HexMovie">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>